{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "object-literal-sort-keys": false,
        "trailing-comma": false,
        "semicolon": [true, "never"]
    },
    "rules": {
        "semicolon": [true, "never"],
        "trailing-comma": false,
        "whitespace": [true,
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "object-literal-sort-keys": false,
        "eofline": false,
        "no-consecutive-blank-lines": false,
        "no-trailing-whitespace": [true, "ignore-template-strings", "ignore-blank-lines"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "ordered-imports": false,
        "member-access": false,
        "max-line-length": [true, 240],
        "comment-format": false,
        "interface-name": false,
        "curly": false,
        "member-ordering": false,
        "object-literal-key-quotes": [true, "as-needed"],
        "no-empty": false,
        "no-shadowed-variable": false
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "src/generated/**",
            "build/**",
            "razzle.config.js",
            "src/client/index.tsx",
            "src/client/Auth.ts",
            "node_modules/@storybook/**"
        ]
    }
}
